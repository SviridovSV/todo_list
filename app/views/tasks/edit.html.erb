<div class="row">
  <div class="col-md-6 col-md-offset-3"
    <p>Let's edit the task with title: </p><%= @task.name %>
    <br>
    <%= form_for [@project, @task] do |f| %>
      <div class="row">
        <span>Enter new title </span>
        <span>
          <%= f.text_field :name %><br>
          <% if @task.status == true %>
            <%= f.check_box :status, {checked: true}, "true", "false" %>Status
          <% else %>
            <%= f.check_box :status, {}, "true", "false" %>Status
          <% end %><br>
          <%= f.label :deadline %>
          <%= f.date_select :deadline %><br>
          <%= f.submit 'Save', class: "btn btn-primary" %>
        </span>
      </div>
    <% end %>
  </div>
  <%= link_to 'Back', projects_path %> 
</div>