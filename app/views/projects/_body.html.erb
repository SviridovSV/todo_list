<div class="create-task row">
  <%= form_for [project, Task.new] do |f| %>
    <div class='col-md-12'>
      <div class="input-group">
        <span class="input-group-addon"><span class="glyphicon glyphicon-plus"></span></span>
        <%= f.text_field :name, class: "form-control", placeholder: "Start typing here to create a task..."%>
        <span class="input-group-btn">
         <%= f.submit "Add TASK", class: "btn btn-success btn-block" %>
        </span>
      </div>
    </div>
  <% end %>
</div>
